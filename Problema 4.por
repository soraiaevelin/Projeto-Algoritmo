programa {
  funcao inicio() {
    //Declaração de Variáveis

    real m1,m2,m3,media_Aritmetica

    //Entrada de Dados

    escreva ("Informe o valor gasto no mês um:")
    leia(m1)

    escreva ("Informe o valor gasto no mês um:")
    leia(m2)

    escreva ("Informe o valor gasto no mês um:")
    leia(m3)

    //Processamento
    media_Aritmetica =(m1+m2+m3)/3

    //Saída de Dados
    escreva ("A media aritmética é:",media_Aritmetica)

  }
}
